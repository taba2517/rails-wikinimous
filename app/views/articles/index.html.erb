<div class="container mt-5">
  <h1 class="mb-4">Articles</h1>

  <%= link_to 'New Article', new_article_path, class: "btn btn-primary mb-4" %>

  <ul class="list-group">
    <% @articles.each do |article| %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <%= link_to article.title, article_path(article), class: "text-decoration-none" %>

        <div>
          <%= link_to 'Edit', edit_article_path(article), class: "btn btn-sm btn-outline-secondary me-2" %>
          <%= link_to 'Delete', article_path(article), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-outline-danger" %>
        </div>
      </li>
    <% end %>
  </ul>
</div>
